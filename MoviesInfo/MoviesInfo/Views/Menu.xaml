<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              Title="Menu"
              Icon="hamburger.png"
             x:Class="MoviesInfo.Views.Menu">
    <ContentPage.Content>
        <StackLayout Spacing="5" Padding="5,30,5,20">
            <Button Text="Main Page" 
                    TextColor="DarkBlue"
                    Clicked="IrMainPage"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"/>
            <Button Text="Tipos Layouts" 
                    TextColor="DarkBlue"
                    Clicked="IrLayouts"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>