<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:templates="clr-namespace:MoviesInfo.Views.Templates"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             BackgroundColor="{StaticResource MenuBackgroundColor}"
             Title="Menu" Icon="hamburger.png" x:Class="MoviesInfo.Views.Menu">
    <ContentPage.Content>
        <StackLayout>
                    <Button Text="Main Page" TextColor="White" Clicked="IrMainPage" HorizontalOptions="Center" BackgroundColor="Transparent" />
                    <Button Text="Tipos Layouts" TextColor="White" Clicked="IrLayouts" HorizontalOptions="Center" BackgroundColor="Transparent" />
                    <Button Text="Meu Filme Favorito" TextColor="White" Clicked="IrFavorito" HorizontalOptions="Center" BackgroundColor="Transparent" />
                    <Button Text="Calculadora no Codigo" TextColor="White" Clicked="IrPaginaCodigo" HorizontalOptions="Center" BackgroundColor="Transparent" />
                    <Button Text="Calculadora no XAML" TextColor="White" Clicked="IrPaginaXaml" HorizontalOptions="Center" BackgroundColor="Transparent" />
                    <Button Text="Cadastro" TextColor="White" Clicked="IrCadastro" HorizontalOptions="Center" BackgroundColor="Transparent" />
                </StackLayout>
    </ContentPage.Content>
</ContentPage>